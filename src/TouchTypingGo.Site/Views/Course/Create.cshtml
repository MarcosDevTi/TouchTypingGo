            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <h4>Preencha todos os dados Corretamente</h4>
            <hr />
            <vc:summary />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LimitDate" class="control-label"></label>
                <input asp-for="LimitDate" class="form-control" />
                <span asp-validation-for="LimitDate" class="text-danger"></span>
            </div>

            <div id="leconsList" class="container"></div>
            <div class="container">
                @foreach (var item in (List<LessonPresentationViewModel>)ViewBag.UserLessons)
                {
                    <div id="@item.Id" class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input">
                            @item.Text
                        </label>
                    </div>
                }
            </div>
            
            @*<div class="form-group">
