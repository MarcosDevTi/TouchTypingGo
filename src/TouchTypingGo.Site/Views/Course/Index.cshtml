@using TouchTypingGo.Application.Cqrs.Query.Models.Course
@model IEnumerable<CourseIndex>

@{
    ViewData["Title"] = "Lista de Cursos";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary float-left">
                    <span title="Novo Curso" class="glyphicon glyphicon-plus-sign"> Novo Curso</span>
                </a>
            </div>
        </div>
    </div>
</div>
<table class="table table-striped ">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimitDate)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @item.LimitDate?.ToString("d")
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                        Edit<span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                        Details<span class="glyphicon glyphicon-search"></span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        Delete<span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>

            </tr>


            @if (item.Lessons.Any())
            {
                <tr class="table-primary">
                    <th>
                        Nome
                    </th>
                    <th>
                        Texto
                    </th>
                    <th>
                        Id
                    </th>
                </tr>
            }

            @foreach (var lesson in item.Lessons)
            {
                <tr class="table-light">
                    <td>
                        @lesson.Name
                    </td>
                    <td>
                        @lesson.Text
                    </td>
                    <td>
                        @lesson.Id
                    </td>
                </tr>
            }


        }
    </tbody>
</table>
