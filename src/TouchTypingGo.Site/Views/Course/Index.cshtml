@model IEnumerable<TouchTypingGo.Application.ViewModels.CourseViewModel>

@{
    ViewData["Title"] = "Lista de Cursos";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Novo Curso" class="glyphicon glyphicon-plus-sign"> Novo Curso</span>
                </a>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LimitDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deleted)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.LimitDate?.ToString("d")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                    <span class="glyphicon glyphicon-search"></span>
                </a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
