@model TouchTypingGo.Application.ViewModels.CourseViewModel


        
        @if (Model.Lessons != null)
        {
            <table class="table table-hover">
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Texto
                    </th>
                    <th>
                        Id
                    </th> 
                    <th></th>
                </tr> 
                @foreach (var lesson in Model.Lessons)
                {
                    <tr>
                        <td>
                            @lesson.Name
                        </td>
                        <td>
                            @lesson.Text
                        </td>
                        <td>
                            @lesson.Id
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="" class="">
                                Delete<span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
           
        }
