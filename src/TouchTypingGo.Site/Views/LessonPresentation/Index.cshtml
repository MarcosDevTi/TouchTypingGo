@model IEnumerable<TouchTypingGo.Application.ViewModels.LessonPresentationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Novo Exercício" class="glyphicon glyphicon-plus-sign"> Novo Exercício</span>
                </a>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.FontSize)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.FontSize)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <span class=""><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <span class=""><i class="fa fa-search-plus" aria-hidden="true"></i></span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <span class=""><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
