@model TouchTypingGo.Application.ViewModels.InstitutionViewModel
@{
    ViewData["Title"] = "Add Address";
}

<div class="modal-header">
    <button type="button" , class="close" data-dismiss="modal">
        <span aria-hidden="true">x</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">@ViewData["Title"]</h4>
</div>

<form asp-action="AddAddress">
    <div class="modal-body">
        <div class="form-horizontal">
            <vc:summary />

            @Html.Partial("_Address")

            <div class="modal-footer">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Address" class="btn btn-success" />
                    <input type="button" class="btn btn-info" value="Close" data-dismiss="modal" />
                </div>
            </div>
        </div>
    </div>
</form>